        "type": "function",
        "z": "temperatura_notificacion",
        "name": "Verificar temperatura",
        "func": "// Convertir el mensaje a objeto si viene como string\nlet datos;\ntry {\n    if (typeof msg.payload === 'string') {\n        datos = JSON.parse(msg.payload);\n    } else {\n        datos = msg.payload;\n    }\n    \n    // Obtener el contexto de flujo para mantener el estado\n    let flow = context.flow;\n    \n    // Obtener los estados anteriores del contexto\n    let ultimoEstado = flow.get('estadoTemperatura') || 'normal';\n    \n    // Verificar temperatura actual\n    let estadoActual = datos.temperatura < 20 ? 'baja' : 'normal';\n    \n    // Guardar el nuevo estado\n    flow.set('estadoTemperatura', estadoActual);\n    \n    // Si ha cambiado de normal a baja, enviar alerta\n    if (estadoActual === 'baja' && ultimoEstado === 'normal') {\n        // Crear mensaje para enviar correo\n        return {\n            payload: {\n                temperatura: datos.temperatura,\n                timestamp: new Date().toLocaleString()\n            },\n            topic: \"alerta_temperatura\"\n        };\n    }\n    \n    // No enviar nada si no se cumple la condición\n    return null;\n    \n} catch(e) {\n    node.error(\"Error al procesar datos: \" + e.message);\n    return null;\n}",
