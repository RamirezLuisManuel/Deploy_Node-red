        "func": "// Convertir el mensaje a objeto si viene como string\nlet datos;\ntry {\n    if (typeof msg.payload === 'string') {\n        datos = JSON.parse(msg.payload);\n    } else {\n        datos = msg.payload;\n    }\n    \n    // Verificar si la alarma está activa\n    if (datos.alarma_activa) {\n        // Si la alarma está activa, habilitar el botón\n        return {\n            payload: true,\n            topic: \"enable\"\n        };\n    } else {\n        // Si la alarma está inactiva, deshabilitar el botón\n        return {\n            payload: false,\n            topic: \"enable\"\n        };\n    }\n} catch(e) {\n    node.error(\"Error al procesar datos: \" + e.message);\n    return null;\n}",
